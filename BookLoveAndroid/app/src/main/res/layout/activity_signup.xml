<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    tools:context=".view.signup.SignUpActivity">

    <TextView
        android:id="@+id/some_id2"
        android:layout_width="@dimen/dp_size_200"
        android:layout_height="@dimen/dp_size_32"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_size_40"
        android:fontFamily="@font/cafe24surround"
        android:gravity="center_horizontal|top"
        android:text="@string/app_title"
        android:textColor="@color/gray"
        android:textSize="@dimen/default_text_size"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/some_id" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_size_140"
        android:fontFamily="@font/cafe24surround"
        android:gravity="center_horizontal|top"
        android:text="@string/app_title_ko"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/app_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_400"
        android:layout_marginTop="@dimen/dp_size_16"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/some_id2">

        <LinearLayout
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="@dimen/dp_size_60"
            android:layout_marginBottom="@dimen/dp_size_10"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/idEditText"
                android:layout_width="@dimen/dp_size_200"
                android:layout_height="@dimen/dp_size_60"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/kopubworld_dotum_medium"
                android:hint="   아이디"
                android:textColorHint="@color/dark_purple"
                android:textSize="@dimen/edittext_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checkIDButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_size_60"
                android:layout_marginStart="@dimen/dp_size_4"
                android:textColor="@color/white"
                android:background="@drawable/complete_rectangle"
                android:textSize="@dimen/default_text_size"
                android:text="@string/id_check" />

        </LinearLayout>

        <EditText
            android:id="@+id/nickNameEditText"
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="@dimen/dp_size_60"
            android:background="@drawable/rectangle"
            android:layout_marginBottom="@dimen/dp_size_10"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:hint="   닉네임"
            android:textColorHint="@color/dark_purple"
            android:textSize="@dimen/edittext_text_size"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pwEditText"
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="@dimen/dp_size_60"
            android:background="@drawable/rectangle"
            android:layout_marginBottom="@dimen/dp_size_10"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:hint="   비밀번호"
            android:textColorHint="@color/dark_purple"
            android:textSize="@dimen/edittext_text_size"
            android:inputType="textPassword"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pwConfEditText"
            android:layout_width="@dimen/dp_size_300"
            android:layout_height="@dimen/dp_size_60"
            android:background="@drawable/rectangle"
            android:layout_marginBottom="@dimen/dp_size_10"
            android:fontFamily="@font/kopubworld_dotum_medium"
            android:hint="   비밀번호 확인"
            android:textColorHint="@color/dark_purple"
            android:textSize="@dimen/edittext_text_size"
            android:inputType="textPassword"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupButton"
        android:layout_width="@dimen/dp_size_300"
        android:layout_height="@dimen/dp_size_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp_size_70"
        android:background="@drawable/complete_rectangle"
        android:fontFamily="@font/kopubworld_dotum_medium"
        android:text="@string/signUp"
        android:textColor="@color/white"
        android:textSize="@dimen/edittext_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>